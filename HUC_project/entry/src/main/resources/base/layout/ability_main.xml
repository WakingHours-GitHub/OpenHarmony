<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:background_element="$media:ruishi"
    ohos:orientation="vertical"
    ohos:total_weight="10"
    >


    <!--图层界面-->
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:alignment="center"
        ohos:weight="8"
        ohos:total_weight="10"

        >
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="vertical"
            ohos:alignment="center"
            ohos:weight="6"

            >

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_alignment="horizontal_center"
                ohos:text="交个锤子有限朋友公司"
                ohos:text_size="100"
                ohos:text_color="white"
                ohos:bottom_margin="20"

                />
            <Image
                ohos:height="400"
                ohos:width="1000"
                ohos:image_src="$media:laoluo"

                />

        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="vertical"
            ohos:alignment="center"
            ohos:weight="4"

            >
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:orientation="horizontal"
                ohos:background_element="$graphic:input_textfied"
                ohos:padding="20"
                ohos:bottom_margin="50"
                >
                <Image
                    ohos:height="80"
                    ohos:width="100"
                    ohos:scale_mode="inside"
                    ohos:layout_alignment="center"
                    ohos:image_src="$media:icon_user"
                    ohos:right_margin="20"
                    />
                <TextField
                    ohos:height="match_content"
                    ohos:width="800"
                    ohos:text_alignment="top"
                    ohos:hint="请输入用户名:"
                    ohos:hint_color="#FFC3C3C3"
                    ohos:text_size="80"
                    ohos:text_color="white"

                    />
            </DirectionalLayout>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:orientation="horizontal"
                ohos:background_element="$graphic:input_textfied"
                ohos:padding="20"

                >
                <Image
                    ohos:height="80"
                    ohos:width="100"
                    ohos:scale_mode="inside"
                    ohos:layout_alignment="center"
                    ohos:image_src="$media:icon_hide"
                    ohos:right_margin="20"
                    />
                <TextField
                    ohos:height="match_content"
                    ohos:width="800"
                    ohos:text_alignment="top"
                    ohos:hint="请输入密码:"
                    ohos:hint_color="#FFC3C3C3"
                    ohos:text_size="80"
                    ohos:text_color="white"

                    />
            </DirectionalLayout>

        </DirectionalLayout>

    </DirectionalLayout>

    <!--按钮-->
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:total_weight="2"
        ohos:weight="2"
        ohos:top_margin="20"

        >
        <Button
            ohos:id="$+id:but_login"
            ohos:height="match_content"
            ohos:width="400"
            ohos:background_element="$graphic:background_button"
            ohos:weight="1"
            ohos:text="登陆"
            ohos:text_size="100"
            ohos:text_color="white"
            />

        <Button
            ohos:id="$+id:but_register"
            ohos:height="match_content"
            ohos:width="400"
            ohos:background_element="$graphic:background_button"
            ohos:weight="1"
            ohos:left_margin="60vp"
            ohos:text="注册"
            ohos:text_size="100"
            ohos:text_color="white"
            />

    </DirectionalLayout>


<!--    测试TEXT      -->
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="vertical"

        >
        <Text
            ohos:id="$+id:text_status"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="离谱"
            ohos:text_size="100"
            ohos:text_color="white"

            />


    </DirectionalLayout>



</DirectionalLayout>
