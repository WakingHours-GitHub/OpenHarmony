<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical"
    ohos:background_element="$media:background"
    ohos:total_weight="12"
    >

<!--    欢迎, 注册界面    -->
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="horizontal_center"
        ohos:orientation="vertical"
        ohos:weight="5"
        >

        <Text
            ohos:id="$+id:text_helloworld"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="《欢迎来到》"

            ohos:text_color="white"
            ohos:text_alignment="horizontal_center"
            ohos:text_size="100"
            />
        <Image
            ohos:height="400"
            ohos:width="800"
            ohos:scale_mode="stretch"
            ohos:top_margin="50"

            ohos:layout_alignment="center"
            ohos:image_src="$media:smartisan"

            />

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="开发个锤子有限公司"
            ohos:text_color="white"
            ohos:text_alignment="horizontal_center"
            ohos:text_size="100"
            />

    </DirectionalLayout>

<!--    页面开发 -->
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:alignment="horizontal_center"
        ohos:orientation="vertical"
        ohos:weight="7"
        >

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal"


            >
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="用户名:"
                ohos:text_color="white"
                ohos:text_size="80"
                ohos:layout_alignment="vertical_center"
                ohos:text_alignment="vertical_center"
                ohos:right_margin="20"
                />

            <TextField
                ohos:height="90"
                ohos:width="600"
                ohos:layout_alignment="vertical_center"
                ohos:text_alignment="vertical_center"
                ohos:background_element="$graphic:radio_button"
                ohos:hint="测试"
                ohos:text_size="40"
                ohos:padding="15"

                ohos:hint_color="#FF818181"
            />
        </DirectionalLayout>

    </DirectionalLayout>


</DirectionalLayout>