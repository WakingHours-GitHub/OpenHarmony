<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="20vp"
        ohos:text="早教算数题"
        ohos:text_size="38vp"
        />

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:orientation="horizontal"
        ohos:top_margin="10vp">

        <Text
            ohos:id="$+id:number1"
            ohos:height="120vp"
            ohos:width="120vp"
            ohos:background_element="#007CFD"
            ohos:padding="20vp"
            ohos:text_alignment="center"
            ohos:text_size="200"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:background_ability_main"
            ohos:text="+"
            ohos:text_size="200"
            ohos:top_padding="20vp"
            />

        <Text
            ohos:id="$+id:number2"
            ohos:height="120vp"
            ohos:width="120vp"
            ohos:background_element="#007CFD"
            ohos:padding="20vp"
            ohos:text_alignment="center"
            ohos:text_size="200"
            />
    </DirectionalLayout>

    <TextField
        ohos:id="$+id:answer"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_ability_main"
        ohos:hint="答题区"
        ohos:layout_alignment="horizontal_center"
        ohos:text_size="200"
        ohos:top_margin="30vp"
        />

    <Button
        ohos:id="$+id:answer_btn"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_button"
        ohos:layout_alignment="horizontal_center"
        ohos:left_padding="15vp"
        ohos:right_padding="15vp"
        ohos:text="提交答案"
        ohos:text_size="30vp"
        ohos:top_margin="100vp">
    </Button>

    <Button
        ohos:id="$+id:next_btn"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_button"
        ohos:layout_alignment="horizontal_center"
        ohos:left_padding="15vp"
        ohos:right_padding="15vp"
        ohos:text="下一试题"
        ohos:text_size="30vp"
        ohos:top_margin="20vp">
    </Button>

    <Button
        ohos:id="$+id:help_btn"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_button"
        ohos:layout_alignment="horizontal_center"
        ohos:left_padding="15vp"
        ohos:right_padding="15vp"
        ohos:text="实时辅导"
        ohos:text_size="30vp"
        ohos:top_margin="20vp">
    </Button>

</DirectionalLayout>